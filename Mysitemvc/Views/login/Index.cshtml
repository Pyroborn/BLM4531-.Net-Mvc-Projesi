@model Mysitemvc.Models.Usermodel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Time to Log-in</h4>
                    <hr />

                    <form asp-action="ProcessLogin">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label"></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-sign-in-alt me-2"></i>Login</button>
                        </div>

                        <div>
                            <p class="text-center">Don't have an account? <a asp-action="register">Register here</a></p>
                        </div>
                    </form>
                </div>
            </div>
            <div class="mt-3">
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
