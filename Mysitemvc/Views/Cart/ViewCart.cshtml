@model List<CartItem>

<h2>Your Shopping Cart</h2>

@if (Model != null && Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.ProductPrice</td>
                    <td>@(item.Quantity * item.ProductPrice)</td>
                </tr>
            }
        </tbody>
    </table>

    <p>Total Price: @Model.Sum(item => item.Quantity * item.ProductPrice)</p>
    <button>Buy</button>
}
else
{
    <p>Your cart is empty.</p>
}
